<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eg.edu.guc.android.meetup.activity.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_user_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_user"
        android:layout_toEndOf="@+id/img_user"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/img_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_user_bio"
        android:layout_below="@+id/txt_user_name"
        android:layout_toRightOf="@+id/img_user"
        android:layout_toEndOf="@+id/img_user" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_requests"
        android:id="@+id/btn_requests"
        android:layout_below="@+id/img_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_friends"
        android:id="@+id/btn_friends"
        android:layout_alignBottom="@+id/btn_requests"
        android:layout_toRightOf="@+id/btn_requests"
        android:layout_toEndOf="@+id/btn_requests" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_communities"
        android:id="@+id/btn_user_communities"
        android:layout_alignTop="@+id/btn_friends"
        android:layout_toRightOf="@+id/btn_friends"
        android:layout_toEndOf="@+id/btn_friends" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_events"
        android:id="@+id/btn_user_events"
        android:layout_alignTop="@+id/btn_user_communities"
        android:layout_toRightOf="@+id/btn_user_communities"
        android:layout_toEndOf="@+id/btn_user_communities" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Posts:"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_below="@+id/btn_create_community"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/user_post_field"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:id="@+id/btn_add_post"
        android:layout_below="@+id/user_post_field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lst_user_posts"
        android:layout_below="@+id/btn_add_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Community"
        android:id="@+id/btn_create_community"
        android:layout_below="@+id/btn_requests"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:id="@+id/btn_create_event"
        android:layout_above="@+id/textView4"
        android:layout_toRightOf="@+id/btn_create_community"
        android:layout_toEndOf="@+id/btn_create_community" />
</RelativeLayout>
