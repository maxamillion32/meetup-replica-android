<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eg.edu.guc.android.meetup.activity.CommunityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_comm_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_comm"
        android:layout_toEndOf="@+id/img_comm"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/img_comm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_comm_desc"
        android:layout_below="@+id/txt_comm_name"
        android:layout_toRightOf="@+id/img_comm"
        android:layout_toEndOf="@+id/img_comm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Admin: "
        android:id="@+id/textView"
        android:layout_below="@+id/img_comm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_comm_admin"
        android:layout_below="@+id/img_comm"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_members"
        android:id="@+id/btn_members"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_community_events"
        android:id="@+id/btn_community_events"
        android:layout_alignBottom="@+id/btn_members"
        android:layout_toRightOf="@+id/btn_members"
        android:layout_toEndOf="@+id/btn_members" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Posts:"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/btn_members"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/comm_post_field"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:id="@+id/btn_add_post"
        android:layout_below="@+id/comm_post_field"
        android:layout_alignRight="@+id/comm_post_field"
        android:layout_alignEnd="@+id/comm_post_field" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lst_comm_posts"
        android:layout_below="@+id/btn_add_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/btn_join"
        android:layout_alignTop="@+id/btn_community_events"
        android:layout_toRightOf="@+id/btn_community_events"
        android:layout_toEndOf="@+id/btn_community_events" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:id="@+id/btn_leave"
        android:layout_alignTop="@+id/btn_join"
        android:layout_toRightOf="@+id/btn_join"
        android:layout_toEndOf="@+id/btn_join" />
</RelativeLayout>
