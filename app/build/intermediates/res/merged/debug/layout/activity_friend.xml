<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eg.edu.guc.android.meetup.activity.FriendActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_friend_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_friend"
        android:layout_toEndOf="@+id/img_friend"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/img_friend"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_friend_bio"
        android:layout_below="@+id/txt_friend_name"
        android:layout_toRightOf="@+id/img_friend"
        android:layout_toEndOf="@+id/img_friend" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_friend_friends"
        android:id="@+id/btn_friend_friends"
        android:layout_below="@+id/img_friend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_communities"
        android:id="@+id/btn_friend_communities"
        android:layout_alignTop="@+id/btn_friend_friends"
        android:layout_toRightOf="@+id/btn_friend_friends"
        android:layout_toEndOf="@+id/btn_friend_friends" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_events"
        android:id="@+id/btn_friend_events"
        android:layout_alignTop="@+id/btn_friend_communities"
        android:layout_toRightOf="@+id/btn_friend_communities"
        android:layout_toEndOf="@+id/btn_friend_communities" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Posts:"
        android:id="@+id/textView7"
        android:layout_below="@+id/btn_friend_friends"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/friend_post_field"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:id="@+id/btn_add_post"
        android:layout_below="@+id/friend_post_field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lst_friend_posts"
        android:layout_below="@+id/btn_add_post"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unfriend"
        android:id="@+id/btn_remove"
        android:layout_above="@+id/textView7"
        android:layout_toRightOf="@+id/btn_friend_events"
        android:layout_toEndOf="@+id/btn_friend_events" />
</RelativeLayout>
